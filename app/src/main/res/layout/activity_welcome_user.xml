<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeUserActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mosquad_banner" />

    <Button
        android:id="@+id/btn_vWelcomeUser_logout"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/mosquad_green"
        android:elevation="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:rotation="0"
        android:text="Logout"
        android:textColor="@color/white"
        android:translationZ="2dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList" />

    <TextView
        android:id="@+id/tv_vWelcomeUser_welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_vWelcomeUser_userFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*User Fname*"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ListView
        android:id="@+id/lv_vWelcomeUser_addressList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/blk_border_with_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vWelcomeUser_userFname" />

    <Button
        android:id="@+id/btn_vWelcomeUser_deleteAddress"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Delete Address"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintTop_toBottomOf="@+id/lv_vWelcomeUser_addressList" />

    <Button
        android:id="@+id/btn_vWelcomeUser_updateEstimate"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Update Estimate"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintTop_toBottomOf="@+id/lv_vWelcomeUser_addressList" />

    <Button
        android:id="@+id/btn_vWelcomeUser_updateAddress"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Update Address"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_vWelcomeUser_updateEstimate"
        app:layout_constraintStart_toEndOf="@+id/btn_vWelcomeUser_deleteAddress"
        app:layout_constraintTop_toBottomOf="@+id/lv_vWelcomeUser_addressList" />

    <Button
        android:id="@+id/btn_vWelcomeUser_reviews"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Reviews"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_vWelcomeUser_deleteAddress"
        app:layout_constraintTop_toBottomOf="@+id/btn_vWelcomeUser_deleteAddress" />

    <Button
        android:id="@+id/btn_vWelcomeUser_userAccount"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="User Account"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_vWelcomeUser_reviews"
        app:layout_constraintTop_toBottomOf="@+id/btn_vWelcomeUser_reviews" />

    <Button
        android:id="@+id/btn_vWelcomeUser_newEstimate"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="New Estimate"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_vWelcomeUser_updateEstimate"
        app:layout_constraintTop_toBottomOf="@+id/btn_vWelcomeUser_updateEstimate" />

    <Button
        android:id="@+id/btn_vWelcomeUser_packageDetails"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Package Details"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_vWelcomeUser_newEstimate"
        app:layout_constraintTop_toBottomOf="@+id/btn_vWelcomeUser_newEstimate" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-List of Saved Estimates-"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_vWelcomeUser_logout"
        app:layout_constraintEnd_toEndOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList" />

</androidx.constraintlayout.widget.ConstraintLayout>