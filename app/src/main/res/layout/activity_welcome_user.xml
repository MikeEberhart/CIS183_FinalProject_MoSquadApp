<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_vWelcomeUser_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeUserActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mosquad_banner" />

    <Button
        android:id="@+id/btn_vWelcomeUser_logout"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/mosquad_green"
        android:elevation="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:rotation="0"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="2dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_vWelcomeUser_userFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*User Fname*"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/lv_vWelcomeUser_addressList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/blk_border_with_radius"
        android:scrollbarThumbVertical="@color/mosquad_green"
        app:layout_constraintBottom_toTopOf="@+id/btn_vWelcomeUser_reviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vWelcomeUser_logout" />

    <Button
        android:id="@+id/btn_vWelcomeUser_newEstimate"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:text="New Estimate"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_vWelcomeUser_packageDetails"
        app:layout_constraintEnd_toEndOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintStart_toEndOf="@+id/btn_vWelcomeUser_reviews" />

    <Button
        android:id="@+id/btn_vWelcomeUser_reviews"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:text="Reviews"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_vWelcomeUser_userAccount"
        app:layout_constraintEnd_toStartOf="@+id/btn_vWelcomeUser_newEstimate"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList" />

    <Button
        android:id="@+id/btn_vWelcomeUser_userAccount"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:text="User Account"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_vWelcomeUser_reviews" />

    <Button
        android:id="@+id/btn_vWelcomeUser_packageDetails"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:text="Package Details"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_vWelcomeUser_newEstimate" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/blk_border_top_radius"
        android:text="Saved Estimates"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintEnd_toEndOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList" />

    <TextView
        android:id="@+id/tv_vWelcomeUser_noSavedEstimates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="*No Saved Estimates*"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintStart_toStartOf="@+id/lv_vWelcomeUser_addressList"
        app:layout_constraintTop_toTopOf="@+id/lv_vWelcomeUser_addressList" />

</androidx.constraintlayout.widget.ConstraintLayout>