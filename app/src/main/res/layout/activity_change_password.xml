<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:id="@+id/tv_vChangePass_confirmPassError"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="*Error*"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintStart_toEndOf="@+id/tv_vChangePass_confirmPassDisplay"
        app:layout_constraintTop_toTopOf="@+id/tv_vChangePass_confirmPassDisplay" />

    <EditText
        android:id="@+id/et_vChangePass_confirmPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/blk_border_with_radius"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_newPass"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_newPass"
        app:layout_constraintTop_toBottomOf="@+id/et_vChangePass_newPass" />

    <TextView
        android:id="@+id/tv_vChangePass_confirmPassDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="2dp"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_confirmPass" />

    <EditText
        android:id="@+id/et_vChangePass_newPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/blk_border_with_radius"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintTop_toBottomOf="@+id/et_vChangePass_oldPass" />

    <TextView
        android:id="@+id/tv_vChangePass_newPassError"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="*Error*"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_newPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_newPass"
        app:layout_constraintStart_toEndOf="@+id/tv_vChangePass_newPassDisplay"
        app:layout_constraintTop_toTopOf="@+id/tv_vChangePass_newPassDisplay" />

    <TextView
        android:id="@+id/tv_vChangePass_newPassDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password:"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="2dp"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_newPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_newPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_newPass" />

    <EditText
        android:id="@+id/et_vChangePass_oldPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/blk_border_with_radius"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vChangePass_headerMessage" />

    <TextView
        android:id="@+id/tv_vChangePass_oldPassDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Password:"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="2dp"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_oldPass" />

    <TextView
        android:id="@+id/tv_vChangePass_oldPassError"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="*Error*"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_oldPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_vChangePass_oldPassDisplay"
        app:layout_constraintTop_toTopOf="@+id/tv_vChangePass_oldPassDisplay"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_vChangePass_back"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintTop_toBottomOf="@+id/et_vChangePass_confirmPass" />

    <Button
        android:id="@+id/btn_vChangePass_saveNewPass"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Save New Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_vChangePass_confirmPass"
        app:layout_constraintTop_toBottomOf="@+id/et_vChangePass_confirmPass" />

    <Button
        android:id="@+id/btn_vChangePass_home"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/mosquad_green"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:icon="@drawable/white_home_icon"
        app:iconSize="42dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_vChangePass_back"
        app:layout_constraintEnd_toStartOf="@+id/btn_vChangePass_saveNewPass"
        app:layout_constraintStart_toEndOf="@+id/btn_vChangePass_back"
        app:layout_constraintTop_toTopOf="@+id/btn_vChangePass_saveNewPass" />

    <TextView
        android:id="@+id/tv_vChangePass_headerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Change Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mosquad_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>